<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sezionePiantaInseribileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="nome ortaggio "
                android:textSize="40dp" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:contentDescription="Centered Image"
                android:layout_gravity="center"
                android:clickable="true" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <!-- aggiungere info pianta e barre acqua e luce-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="aggiungere info pianta "
                android:textSize="30dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/aggiungiPianta"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Aggiungi pianta" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IlMioOrtoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/topstartimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/topstartimage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:paddingTop="50dp"
                    android:paddingLeft="20dp"
                    android:textAlignment="center"
                    android:text="Ecco il tuo orto.\nHai innaffiato le tue piante?"
                    android:textSize="30dp" />


            </RelativeLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Vediamo cos'hai piantato"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />
            <!-- menu a tendina apribile per vedere tutte le piante-->
            <Button
                android:id="@+id/buttonIlMioOrto"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="menu a tendina" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hai ancora spazio libero?"
                android:textSize="20dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/buttonInserisciPianta"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Aggiungi una pianta" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <!-- qua dividerei la bottom in due parti per umidità e temperatura-->
            <!-- ChatIN -->
            <!-- LinearLayout containing the humidity and temperature progress bars -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- Humidity Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Humidity Progress Bar -->
                    <ProgressBar
                        android:id="@+id/humidityProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:progressDrawable="@drawable/circle_progress_humidity"
                        android:max="100"
                        android:progress="80" />

                    <!-- Humidity Percentage -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="-55dp"
                        android:src="@drawable/ic_humidity" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80%"
                        android:textSize="18sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <!-- Temperature Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Temperature Progress Bar -->
                    <ProgressBar
                        android:id="@+id/temperatureProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:progressDrawable="@drawable/circle_progress_temperature"
                        android:max="100"
                        android:progress="25" />

                    <!-- Temperature Percentage -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="-55dp"
                        android:src="@drawable/ic_temperature" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25°C"
                        android:textSize="18sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>


            <!-- ChatOUT -->

            <ImageView
                android:id="@+id/bottomstartimage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottomstartimage" />


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>